<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hc.image.MainActivity">

    <Button
        android:text="Picasso"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/btn_picasso_img_list"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main" />

    <Button
        android:text="Glide"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/btn_glide_img_list"
        app:layout_constraintLeft_toRightOf="@+id/btn_picasso_img_list"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_main" />

    <Button
        android:text="Fresco List"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_fresco_list"
        app:layout_constraintLeft_toRightOf="@+id/btn_glide_img_list"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main" />

    <Button
        android:text="Fresco"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/btn_fresco"
        app:layout_constraintTop_toBottomOf="@+id/btn_picasso_img_list"
        android:layout_marginTop="15dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/btn_glide_img_list"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:text="Http"
        android:layout_width="91dp"
        android:layout_height="51dp"
        android:id="@+id/btn_http"
        app:layout_constraintLeft_toLeftOf="@+id/btn_glide_img_list"
        app:layout_constraintRight_toRightOf="@+id/btn_glide_img_list"
        app:layout_constraintBottom_toBottomOf="@+id/btn_fresco" />

</android.support.constraint.ConstraintLayout>
